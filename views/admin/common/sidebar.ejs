<nav id="sidebar" class="sidebar js-sidebar">
  <div class="sidebar-content js-simplebar">
    <a class="sidebar-brand" href="index.html">
      <span class="align-middle">🌟 Admin Panel</span>
    </a>

    <ul class="sidebar-nav">
      <li class="sidebar-header">📌 Navigation</li>

      <li class="sidebar-item">
        <a class="sidebar-link" href="<%= generateUrl('profile') %>">
          <i class="align-middle" data-feather="user"></i>
          <span class="align-middle">Profile</span>
        </a>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link" href="<%= generateUrl('categorylist') %>">
          <i class="align-middle" data-feather="book"></i>
          <span class="align-middle">Categories</span>
        </a>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link" href="<%= generateUrl('productlist') %>">
          <i class="align-middle" data-feather="box"></i>
          <span class="align-middle">Products</span>
        </a>
      </li>

      <!-- Category Dropdown -->
      <li class="sidebar-item dropdown">
        <a class="sidebar-link dropdown-toggle" href="#">
          <i class="align-middle" data-feather="grid"></i>
          <span class="align-middle">Categories</span>
        </a>
        <ul class="sidebar-dropdown">
          <% categories.forEach((cat) => { %>
          <li>
            <a href="<%= generateUrl('categorywiseproduct', { id: cat._id }) %>">
              <%= cat.name %>
            </a>
          </li>
          <% }) %>
        </ul>
      </li>

      <!-- Product Search -->
      <li class="sidebar-item">
        <form action="<%= generateUrl('searchproduct') %>" method="GET" class="sidebar-search">
          <div class="search-box">
            <input type="text" class="form-control" placeholder="🔍 Search products..." name="title" id="search" />
            <button type="submit" class="btn-search">
              <i data-feather="search"></i>
            </button>
          </div>
        </form>
      </li>

      <!-- Price Range -->
      <li class="sidebar-item">
        <form action="<%= generateUrl('filterproduct') %>" method="GET" class="sidebar-price-range">
          <label for="min-price" class="form-label">💰 Min Price</label>
          <input type="number" class="form-control" id="min-price" name="min" min="0" max="1000" step="10" value="0" required />

          <label for="max-price" class="form-label">💰 Max Price</label>
          <input type="number" class="form-control" id="max-price" name="max" min="0" max="1000" step="10" value="1000" required />

          <button type="submit" class="btn btn-filter">Apply Filter</button>
        </form>
      </li>

      <li class="sidebar-item">
        <a class="sidebar-link" href="<%= generateUrl('adminorderlist') %>">
          <i class="align-middle" data-feather="box"></i>
          <span class="align-middle">Orderlist</span>
        </a>
      </li>

    </ul>
  </div>
</nav>

